generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Debe estar en tu archivo .env
}

model Cliente {
  id_cliente Int      @id @default(autoincrement())
  nombre     String
  correo     String   @unique
  telefono   String
  direccion  String
  facturas   Factura[]

  @@map("clientes")
}

model Producto {
  id_producto     Int              @id @default(autoincrement())
  nombre          String
  precio_unitario Float
  stock           Int
  detalles        DetalleFactura[]

  @@map("productos")
}


model Factura {
  id_factura     Int              @id @default(autoincrement())
  cliente_id     Int
  cliente        Cliente          @relation(fields: [cliente_id], references: [id_cliente])
  empleado_id    Int
  empleado       Empleado         @relation(fields: [empleado_id], references: [id_empleado])
  total          Float
  fecha_emision  DateTime         @default(now())
  detalles       DetalleFactura[]

  @@map("facturas")
}

model DetalleFactura {
  id_detalle   Int      @id @default(autoincrement())
  factura      Factura  @relation(fields: [factura_id], references: [id_factura])
  factura_id   Int
  producto     Producto @relation(fields: [producto_id], references: [id_producto])
  producto_id  Int
  cantidad     Int
  subtotal     Float

  @@map("detalle_factura")
}

model Empleado {
  id_empleado Int       @id @default(autoincrement())
  nombre      String
  correo      String    @unique
  password    String
  rol         String
  facturas    Factura[] // Relaci√≥n uno a muchos: un empleado puede crear muchas facturas
}